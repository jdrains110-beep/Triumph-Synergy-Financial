# Triumph Synergy Financial - Environment Configuration Template
# Copy this file to .env and fill in your actual values

NODE_ENV=production
PORT=3000

# Pi Network Configuration - REQUIRED FOR DOMAIN VALIDATION
# Get these from Pi Developer Portal
PI_API_KEY=your_mainnet_pi_api_key_here
PI_TESTNET_API_KEY=your_testnet_pi_api_key_here
PI_MAINNET_API_KEY=your_mainnet_pi_api_key_here
PI_API_URL=https://api.minepi.com
PI_SANDBOX_MODE=false
PI_APP_NAME=Triumph Synergy Financial

# Pi Domain Validation Keys - REQUIRED FOR DOMAIN OWNERSHIP VERIFICATION
# Get these from Pi App Studio when validating domains
PI_TESTNET_VALIDATION_KEY=your_testnet_validation_key_from_pi_app_studio
PI_MAINNET_VALIDATION_KEY=your_mainnet_validation_key_from_pi_app_studio

# Pi Network Wallet Address
PI_TESTNET_WALLET_ADDRESS=your_testnet_wallet_address

# Frontend Configuration (NEXT_PUBLIC variables)
NEXT_PUBLIC_PI_APP_ID=Triumph-synergy digital financial ecosystem
NEXT_PUBLIC_OWNER_PI_ADDRESS=your_pi_address
NEXT_PUBLIC_OWNER_USER_ID=your_user_id
NEXT_PUBLIC_OWNER_USERNAME=your_username

# Deployment URLs
NEXT_PUBLIC_BACKEND_URL=https://your-deployment-domain.com
NEXT_PUBLIC_API_BASE_URL=https://your-deployment-domain.com

# Security

CORS_ORIGIN=*
# Get these from Pi App Studio when you add your domains
# Mainnet domain: triumphsynergy.com
# Testnet domain: testnet.triumphsynergy.com
PI_TESTNET_VALIDATION_KEY=your_testnet_validation_key_from_pi_app_studio
PI_MAINNET_VALIDATION_KEY=your_mainnet_validation_key_from_pi_app_studio

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=triumph_synergy_financial
DB_USER=postgres
DB_PASSWORD=your_db_password_here





# Security
BCRYPT_ROUNDS=10
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
