# Application Configuration
NODE_ENV=development
PORT=3000

# Main App Foundation (triumphsynergy.com)
MAIN_APP_URL=https://triumphsynergy.com
MAIN_APP_API_KEY=your_main_app_api_key_here

# Framework Integration (testnet.triumphsynergy.com)
FRAMEWORK_URL=https://testnet.triumphsynergy.com
FRAMEWORK_API_KEY=your_framework_api_key_here

# Pi Network Configuration
# Your actual Pi API key from Pi Developer Portal
PI_API_KEY=your_pi_api_key_here
PI_API_URL=https://api.minepi.com
PI_SANDBOX_MODE=false
PI_APP_NAME=Triumph Synergy Financial

# Pi Domain Validation Keys - REQUIRED
# Get these from Pi App Studio when you add your domains
# Mainnet domain: triumphsynergy.com
# Testnet domain: testnet.triumphsynergy.com
PI_TESTNET_VALIDATION_KEY=your_testnet_validation_key_from_pi_app_studio
PI_MAINNET_VALIDATION_KEY=your_mainnet_validation_key_from_pi_app_studio

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=triumph_synergy_financial
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=10
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
